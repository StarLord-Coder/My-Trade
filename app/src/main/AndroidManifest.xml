<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.trade">

    <application
        android:allowBackup="true"
        android:largeHeap="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_icon"
        android:supportsRtl="true"
        android:theme="@style/NoActionBar">
        <activity
            android:name=".views.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.trade.views.MainActivity"
            android:theme="@style/NoActionBar"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateVisible"/>

        <activity
            android:name="com.trade.views.LoginActivity"
            android:theme="@style/NoActionBar"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible"/>

        <activity
            android:name="com.trade.views.MeActivity"
            android:theme="@style/NoActionBar"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateVisible"/>

        <activity
            android:name="com.trade.views.AccountOverviewActivity"
            android:theme="@style/NoActionBar"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"/>

        <activity
            android:name="com.trade.views.TransactionDetailActivity"
            android:theme="@style/NoActionBar"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"/>

        <activity
            android:name="com.trade.views.MainWithLoginActivity"
            android:theme="@style/NoActionBar"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"/>

        <activity
            android:name="com.trade.views.AccountDetailActivity"
            android:theme="@style/NoActionBar"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateVisible"/>

        <activity
            android:name="com.trade.views.SearchActivity"
            android:theme="@style/NoActionBar"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateVisible"/>
    </application>

</manifest>